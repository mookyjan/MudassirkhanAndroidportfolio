<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/portfolio_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_touch_selector"
    android:orientation="horizontal"
    android:padding="@dimen/portfolio_item_padding">

    <ImageView
        android:id="@+id/portfolio_item_icon"
        android:layout_width="@dimen/portfolio_item_image_width"
        android:layout_height="@dimen/portfolio_item_image_height"
        android:layout_gravity="center"
        android:background="@drawable/round_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/portfolio_item_texts_padding">

        <TextView
            android:id="@+id/portfolio_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/portfolio_item_textviews_separation_padding"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/portfolio_item_texts_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/portfolio_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:paddingTop="@dimen/portfolio_item_textviews_separation_padding"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/portfolio_item_texts_size"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>