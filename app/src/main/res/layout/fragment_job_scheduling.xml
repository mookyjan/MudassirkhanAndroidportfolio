<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/job_scheduling_fragment_layout_padding">

        <TextView
            style="@style/TextLabelStyle"
            android:text="@string/job_scheduling_fragment_time_label"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/job_scheduling_fragment_time_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <android.support.v7.widget.CardView
            android:id="@+id/job_scheduling_fragment_cardview_button"
            style="@style/CardViewButtonStyle"
            android:layout_marginBottom="@dimen/job_scheduling_fragment_cardview_margin_bottom"
            android:layout_marginTop="@dimen/job_scheduling_fragment_cardview_margin_top"
            android:elevation="@dimen/job_scheduling_fragment_cardview_elevation"
            app:cardCornerRadius="@dimen/job_scheduling_fragment_cardview_corner_radius">

            <TextView
                android:id="@+id/job_scheduling_fragment_cardview_textview"
                style="@style/CardViewButtonTextStyle"
                android:text="@string/job_scheduling_fragment_start_job" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>