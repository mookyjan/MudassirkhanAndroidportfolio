<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/broadcast_receiver_fragment_root_view_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BroadcastReceiverFragmentTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/broadcast_receiver_fragment_network_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_content_linear_layouts_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/network_broadcast_receiver_imageview"
                    style="@style/BroadcastReceiverFragmentImageStyle" />

                <TextView
                    android:id="@+id/network_broadcast_receiver_textview"
                    style="@style/BroadcastReceiverFragmentStateTextStyle"
                    android:text="@string/broadcast_receiver_fragment_not_registered" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/network_broadcast_receiver_cardview_button"
                style="@style/CardViewButtonStyle"
                android:layout_marginBottom="@dimen/broadcast_receiver_fragment_cardviews_margin_bottom"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_cardviews_margin_top"
                android:elevation="@dimen/cardview_buttons_elevation"
                app:cardCornerRadius="@dimen/cardview_buttons_corner_radius">

                <TextView
                    android:id="@+id/network_broadcast_receiver_cardview_textview"
                    style="@style/CardViewButtonTextStyle"
                    android:text="@string/broadcast_receiver_fragment_register" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/broadcast_receiver_fragment_container_linear_layouts_margin_top"
            android:orientation="vertical">

            <TextView
                style="@style/BroadcastReceiverFragmentTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/broadcast_receiver_fragment_battery_state_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_content_linear_layouts_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/battery_state_broadcast_receiver_imageview"
                    style="@style/BroadcastReceiverFragmentImageStyle" />

                <TextView
                    android:id="@+id/battery_state_broadcast_receiver_textview"
                    style="@style/BroadcastReceiverFragmentStateTextStyle"
                    android:text="@string/broadcast_receiver_fragment_not_registered" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/battery_state_broadcast_receiver_cardview_button"
                style="@style/CardViewButtonStyle"
                android:layout_marginBottom="@dimen/broadcast_receiver_fragment_cardviews_margin_bottom"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_cardviews_margin_top"
                android:elevation="@dimen/cardview_buttons_elevation"
                app:cardCornerRadius="@dimen/cardview_buttons_corner_radius">

                <TextView
                    android:id="@+id/battery_state_broadcast_receiver_cardview_textview"
                    style="@style/CardViewButtonTextStyle"
                    android:text="@string/broadcast_receiver_fragment_register" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/broadcast_receiver_fragment_container_linear_layouts_margin_top"
            android:orientation="vertical">

            <TextView
                style="@style/BroadcastReceiverFragmentTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/broadcast_receiver_fragment_headphones_state_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_content_linear_layouts_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/headphones_state_broadcast_receiver_imageview"
                    style="@style/BroadcastReceiverFragmentImageStyle" />

                <TextView
                    android:id="@+id/headphones_state_broadcast_receiver_textview"
                    style="@style/BroadcastReceiverFragmentStateTextStyle"
                    android:text="@string/broadcast_receiver_fragment_not_registered" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/headphones_state_broadcast_receiver_cardview_button"
                style="@style/CardViewButtonStyle"
                android:layout_marginBottom="@dimen/broadcast_receiver_fragment_cardviews_margin_bottom"
                android:layout_marginTop="@dimen/broadcast_receiver_fragment_cardviews_margin_top"
                android:elevation="@dimen/cardview_buttons_elevation"
                app:cardCornerRadius="@dimen/cardview_buttons_corner_radius">

                <TextView
                    android:id="@+id/headphones_state_broadcast_receiver_cardview_textview"
                    style="@style/CardViewButtonTextStyle"
                    android:text="@string/broadcast_receiver_fragment_register" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>