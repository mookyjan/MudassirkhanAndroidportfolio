<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_grey"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/HorizontalRecyclerViewsFragmentCardviewsStyle"
            app:cardCornerRadius="@dimen/horizontal_recyclerviews_fragment_cardviews_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/HorizontalRecyclerViewsFragmentLabelStyle"
                        android:text="@string/horizontal_recyclerviews_fragment_first_text" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/horizontal_recyclerview_fragments_fab0"
                        style="@style/HorizontalRecyclerViewsFragmentFabStyle"
                        android:elevation="@dimen/horizontal_recyclerviews_fragment_cardviews_elevation"
                        app:fabSize="mini" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_recyclerviews_fragment_number0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HorizontalRecyclerViewsFragmentCardviewsStyle"
            app:cardCornerRadius="@dimen/horizontal_recyclerviews_fragment_cardviews_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/HorizontalRecyclerViewsFragmentLabelStyle"
                        android:text="@string/horizontal_recyclerviews_fragment_second_text" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/horizontal_recyclerview_fragments_fab1"
                        style="@style/HorizontalRecyclerViewsFragmentFabStyle"
                        android:elevation="@dimen/horizontal_recyclerviews_fragment_cardviews_elevation"
                        app:fabSize="mini" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_recyclerviews_fragment_number1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HorizontalRecyclerViewsFragmentCardviewsStyle"
            app:cardCornerRadius="@dimen/horizontal_recyclerviews_fragment_cardviews_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/HorizontalRecyclerViewsFragmentLabelStyle"
                        android:text="@string/horizontal_recyclerviews_fragment_third_text" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/horizontal_recyclerview_fragments_fab2"
                        style="@style/HorizontalRecyclerViewsFragmentFabStyle"
                        android:elevation="@dimen/horizontal_recyclerviews_fragment_cardviews_elevation"
                        app:fabSize="mini" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_recyclerviews_fragment_number2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/HorizontalRecyclerViewsFragmentCardviewsStyle"
            android:layout_marginBottom="@dimen/horizontal_recyclerviews_fragment_last_cardview_margin_bottom"
            app:cardCornerRadius="@dimen/horizontal_recyclerviews_fragment_cardviews_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/HorizontalRecyclerViewsFragmentLabelStyle"
                        android:text="@string/horizontal_recyclerviews_fragment_fourth_text" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/horizontal_recyclerview_fragments_fab3"
                        style="@style/HorizontalRecyclerViewsFragmentFabStyle"
                        android:elevation="@dimen/horizontal_recyclerviews_fragment_cardviews_elevation"
                        app:fabSize="mini" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontal_recyclerviews_fragment_number3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
