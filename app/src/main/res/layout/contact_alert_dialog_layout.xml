<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contact_alert_dialog_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/contact_alert_dialog_layout_padding_left_right"
        android:paddingRight="@dimen/contact_alert_dialog_layout_padding_left_right"
        android:paddingTop="@dimen/contact_alert_dialog_layout_padding_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/base_database_fragment_contact_alert_dialog_name_label" />

        <EditText
            android:id="@+id/contact_alert_dialog_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contact_alert_dialog_textviews_margin_top"
            android:text="@string/base_database_fragment_contact_alert_dialog_phone_number_label" />

        <EditText
            android:id="@+id/contact_alert_dialog_phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contact_alert_dialog_textviews_margin_top"
            android:text="@string/base_database_fragment_contact_alert_dialog_email_label" />

        <EditText
            android:id="@+id/contact_alert_dialog_email_address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contact_alert_dialog_textviews_margin_top"
            android:text="@string/base_database_fragment_contact_alert_dialog_city_label" />

        <EditText
            android:id="@+id/contact_alert_dialog_city_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/contact_alert_dialog_constraintlayout_margin_top">

            <Button
                android:id="@+id/contact_alert_dialog_choose_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_alert_dialog_button_margin"
                android:layout_marginStart="@dimen/contact_alert_dialog_button_margin"
                android:layout_marginTop="@dimen/contact_alert_dialog_button_margin"
                android:text="@string/base_database_fragment_contact_alert_dialog_choose_picture_label"
                android:textSize="@dimen/contact_alert_dialog_button_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contact_alert_dialog_picture_file_name"
                android:layout_width="@dimen/contact_alert_dialog_picture_file_name_textview_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_alert_dialog_picture_file_name_textview_margin"
                android:layout_marginLeft="@dimen/contact_alert_dialog_picture_file_name_textview_margin"
                android:layout_marginRight="@dimen/contact_alert_dialog_picture_file_name_textview_margin"
                android:layout_marginTop="@dimen/contact_alert_dialog_picture_file_name_textview_margin"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/contact_alert_dialog_choose_picture_button"
                app:layout_constraintRight_toLeftOf="@+id/contact_alert_dialog_remove_picture_button"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/contact_alert_dialog_remove_picture_button"
                android:layout_width="@dimen/contact_alert_dialog_remove_picture_button_width_height"
                android:layout_height="@dimen/contact_alert_dialog_remove_picture_button_width_height"
                android:layout_marginBottom="@dimen/contact_alert_dialog_remove_picture_button_margin"
                android:layout_marginEnd="@dimen/contact_alert_dialog_remove_picture_button_margin"
                android:layout_marginTop="@dimen/contact_alert_dialog_remove_picture_button_margin"
                android:background="@mipmap/remove_icon"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>