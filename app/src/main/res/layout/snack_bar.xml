<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/portfolio_items_activity_snackbar_padding">

        <TextView
            style="@style/TextLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/snack_bar_description_label"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/snack_bar_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/portfolio_items_activity_snackbar_content_text_size" />

        <TextView
            style="@style/TextLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/portfolio_items_activity_snackbar_labels_margin_top"
            android:text="@string/snack_bar_possible_actions_label"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/snack_bar_possible_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/portfolio_items_activity_snackbar_content_text_size" />

        <TextView
            android:id="@+id/snack_bar_repeating_fragment_label"
            style="@style/TextLabelStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/portfolio_items_activity_snackbar_labels_margin_top"
            android:text="@string/snack_bar_repeating_fragment_label"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/snack_bar_repeating_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/portfolio_items_activity_snackbar_content_text_size"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>