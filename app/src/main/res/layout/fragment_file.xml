<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/picture_imageview"
            android:layout_width="@dimen/file_fragment_imageview_size"
            android:layout_height="@dimen/file_fragment_imageview_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/file_fragment_imageview_margin_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/file_fragment_fabs_linear_layout_height"
            android:layout_gravity="bottom"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/take_picture_fab"
                style="@style/FileFragmentFloatingActionButtonStyle"
                android:src="@mipmap/camera_icon"
                app:fabSize="normal" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/save_fab"
                style="@style/FileFragmentFloatingActionButtonStyle"
                android:src="@mipmap/save_icon"
                android:visibility="gone"
                app:fabSize="normal" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/clear_fab"
                style="@style/FileFragmentFloatingActionButtonStyle"
                android:src="@mipmap/delete_icon"
                android:visibility="gone"
                app:fabSize="normal" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>